@model cwagnerFinancialPortal.Models.Budget.EditBudgetViewModel

@using (Html.BeginForm("Edit", "Budget", FormMethod.Post, new { @class = "form-material form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Edit this budget</h4>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(e => Model.Id)
        <div class="form-group">
            <label for="budget-name" class="control-label">Budget Duration: </label>
            @Html.EnumDropDownListFor(e => Model.Duration)
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">Save changes</button>
    </div>
}