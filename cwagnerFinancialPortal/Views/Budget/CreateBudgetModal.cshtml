@model cwagnerFinancialPortal.Models.Budget.CreateBudgetViewModel

@using (Html.BeginForm("Create", "Budget", FormMethod.Post, new { @class = "form-material form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Add a budget</h4>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="budget-name" class="control-label">Budget Duration: </label>
            @Html.EnumDropDownListFor(e => Model.Duration)
        </div>
        <div class="form-group">
            <p>Your budget total will be automatically calculated once items have been created.</p>
            <p>Click on the newly created budget to add budget categories and amounts.</p>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">Submit</button>
    </div>
}