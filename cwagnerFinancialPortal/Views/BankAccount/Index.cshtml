@model cwagnerFinancialPortal.Models.BankAccountIndexViewModel
@{
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Bank Accounts</h4>
        <h6 class="card-subtitle">@Html.ActionLink("Add Account", "CreateBankAccountModal", null, new { data_target="#modal", data_toggle = "modal", data_remote = "true" })</h6>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.Accounts.First().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Accounts.First().Balance)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Accounts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditBankAccountModal", new { id = item.Id}, new  { data_target = "#modal", data_toggle = "modal", data_remote = "true" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "DeleteBankAccountModal", new { id = item.Id }, new { data_target = "#modal", data_toggle = "modal", data_remote = "true" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>