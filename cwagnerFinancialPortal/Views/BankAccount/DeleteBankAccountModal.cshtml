@model cwagnerFinancialPortal.Models.BankAccount.DeleteBankAccountViewModel

<div class="modal-header">
    <h4 class="modal-title" id="myModalLabel"><b>WARNING!</b></h4>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-body">
    <h4>Are you sure you want to delete the bank account, @Model.Name?</h4>
    <p>This account and all of its transactions will be permanently deleted.</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
    @using (Html.BeginForm("Delete", "BankAccount", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(h => Model.Id)
        <button type="submit" class="btn btn-danger waves-effect waves-light">Delete</button>
    }
</div>