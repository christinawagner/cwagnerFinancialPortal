@model cwagnerFinancialPortal.Models.BankAccount.CreateBankAccountViewModel
@{
    ViewBag.Title = "CreateBankAccountModalPartial";
}

@using (Html.BeginForm("Create", "BankAccount", FormMethod.Post, new { @class = "form-material form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Add an account</h4>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input class="form-control" type="text" name="@nameof(Model.Name)" required="" placeholder="Account Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="@nameof(Model.Balance)" required="" placeholder="Current Balance">
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">Submit</button>
    </div>
}