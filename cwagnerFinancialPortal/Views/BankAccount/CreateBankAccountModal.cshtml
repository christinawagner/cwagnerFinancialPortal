@model cwagnerFinancialPortal.Models.BankAccount.CreateBankAccountViewModel
@{
    ViewBag.Title = "CreateBankAccountModalPartialView";
}

@using (Html.BeginForm("Create", "BankAccount", FormMethod.Post))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Add an account</h4>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="account-name" class="control-label">Account Name:</label>
            @Html.EditorFor(e => Model.Name)
        </div>
        <div class="form-group">
            <label for="message-text" class="control-label">Current Balance:</label>
            @Html.EditorFor(e => Model.Balance)
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">Submit</button>
    </div>
}